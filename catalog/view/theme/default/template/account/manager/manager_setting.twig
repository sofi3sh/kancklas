{{ header }}
<div id="account-newsletter" class="container">
    <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
    </ul>
    <div class="row">{{ column_left }}
        {% if column_left and column_right %}
            {% set class = 'col-sm-6' %}
        {% elseif column_left or column_right %}
            {% set class = 'col-sm-9' %}
        {% else %}
            {% set class = 'col-sm-12' %}
        {% endif %}
        <div id="content" class="{{ class }}">{{ content_top }}
            <h1>{{ heading_title }}</h1>


            <div style="margin: 20px 0">
                <form action="" method="post">
                    <span>{{ text_minimum_order }}</span><input type="number" step="any" value="{{ data.minimum_order }}"><span> грн.</span>
                    <button type="submit" name="minimum_order_value">{{ text_button_save }}</button>
                </form>
            </div>

            <div style="margin: 20px 0">
                <form action="" method="post">
                    Передоплата <input type="number" step="any" value="{{ data.minimum_prepayment_value }}">
                    грн або <input type="number" step="any" value="{{ data.minimum_prepayment_percent }}">%
                    при замовленні більше <input type="number" step="any" value="{{ data.minimum_prepayment_order }}">грн
                    <button type="submit" name="minimum_prepayment_value">{{ text_button_save }}</button>
                </form>
            </div>

            <div class="buttons clearfix">
                <div class="pull-right"><a href="{{ back }}" class="btn btn-primary">{{ button_back }}</a></div>
            </div>

            {{ content_bottom }}</div>
        {{ column_right }}</div>
</div>
{{ footer }}